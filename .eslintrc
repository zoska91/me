{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "parser": "babel-eslint",
  "extends": ["airbnb", "airbnb/hooks"],
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx", ".ts", ".tsx"],
        "paths": ["./src/"]
      }
    },
    "import/extensions": [".js", ".jsx", ".ts", ".tsx"]
  },
  "rules": {
    "semi": "error",
    "no-console": ["error", { "allow": ["error"] }],
    "react/jsx-props-no-spreading": ["off"],
    "react/jsx-filename-extension": ["off"],
    "react/prop-types": ["off"]
  }
}
